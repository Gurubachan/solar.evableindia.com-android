<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_user_profile_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_person_24" 
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" 
        android:layout_marginEnd="16dp"
        android:text="Welcome User!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@id/iv_user_profile_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile_home"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile_home" />

    <!-- Dashboard Stats Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_dashboard_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile_home" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_stats_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Application Summary"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_refresh_stats_inline"/>
            
            <ImageButton
                android:id="@+id/btn_refresh_stats_inline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Refresh Stats"
                app:tint="?attr/colorControlNormal" 
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_stats_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_stats_title"/>

            <ProgressBar
                android:id="@+id/pb_stats_loading"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_stats_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_stats_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorError"
                android:visibility="gone"
                android:gravity="center_horizontal"
                tools:text="Error loading stats\nTap refresh to try again."
                app:layout_constraintTop_toBottomOf="@id/tv_stats_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <GridLayout
                android:id="@+id/grid_stats_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="3"
                app:layout_constraintTop_toBottomOf="@id/tv_stats_title" 
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Total Applications:" />
                <TextView
                    android:id="@+id/tv_total_applications"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:textStyle="bold"
                    tools:text="123" />

                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="KYC Verified:" />
                <TextView
                    android:id="@+id/tv_kyc_verified"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    tools:text="95 / 110" />

                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Bank Verified:" />
                <TextView
                    android:id="@+id/tv_bank_verified"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    tools:text="92 / 105" />

                 <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Discom Verified:" />
                <TextView
                    android:id="@+id/tv_discom_verified"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    tools:text="88 / 100" />

                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Installation Verified:" />
                <TextView
                    android:id="@+id/tv_installation_verified"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    tools:text="85 / 97" />

                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Fully Completed:" />
                <TextView
                    android:id="@+id/tv_fully_completed"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    tools:text="80" />

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_dashboard_stats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_my_applications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Applications"
            app:icon="@drawable/ic_baseline_list_alt_24"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_new_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Create New Application"
            app:icon="@drawable/ic_baseline_add_circle_outline_24"
            style="@style/Widget.MaterialComponents.Button.Icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_user_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User Management"
            android:visibility="gone"
            tools:visibility="visible"
            app:icon="@drawable/ic_baseline_people_24"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_agent_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Agent Wise Report"
            android:visibility="gone"
            tools:visibility="visible"
            app:icon="@drawable/ic_baseline_assessment_24" 
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".KYCActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_kyc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="KYC Details" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Verified Status Section -->
            <LinearLayout
                android:id="@+id/llVerifiedStatusKyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/verified_status_background"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_verified_badge"
                    app:tint="#4CAF50" /> <!-- Green tint for the badge -->

                <TextView
                    android:id="@+id/tvVerifiedStatusMessageKyc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="KYC Details Verified"
                    android:textColor="#388E3C" /> <!-- Darker Green Text -->
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aadhaar_number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhaar Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aadhaar_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="12" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_pan_number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="PAN Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pan_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:maxLength="10" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Upload Aadhaar Card (Front):"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <Button
                android:id="@+id/button_upload_aadhaar_front" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select Aadhaar Front PDF/Image" />
                
            <ImageView
                android:id="@+id/iv_aadhaar_front_preview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:scaleType="centerCrop"
                android:contentDescription="Aadhaar Document Front Preview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Aadhaar Card (Back):"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <Button
                android:id="@+id/button_upload_aadhaar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select Aadhaar Back PDF/Image" />

            <ImageView
                android:id="@+id/iv_aadhaar_back_preview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:scaleType="centerCrop"
                android:contentDescription="Aadhaar Document Back Preview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload PAN Card:"
                android:textAppearance="?attr/textAppearanceSubtitle1"/>

            <Button
                android:id="@+id/button_upload_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select PAN PDF/Image" />

            <ImageView
                android:id="@+id/iv_pan_preview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:scaleType="centerCrop"
                android:contentDescription="PAN Document Preview"/>

            <!-- Verification Section -->
            <LinearLayout
                android:id="@+id/verificationSectionKyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/dashed_border_background"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Verification (KYC)"
                    android:textAppearance="?attr/textAppearanceSubtitle1" 
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVerificationStatusKyc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Verification Status">

                    <AutoCompleteTextView
                        android:id="@+id/actVerificationStatusKyc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilVerificationRemarkKyc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Verification Remark (Optional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVerificationRemarkKyc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/buttonSubmitVerificationKyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Submit KYC Verification" />

            </LinearLayout>

            <Button
                android:id="@+id/button_submit_kyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Submit KYC" />

            <Button
                android:id="@+id/btn_delete_kyc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Delete KYC Details"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="?attr/colorError"
                app:strokeColor="?attr/colorError"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
